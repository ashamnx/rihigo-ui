# NOTE: The UI no longer connects directly to PostgreSQL
# All database operations go through the Go API at API_URL
# The DATABASE_URL is only needed for the API (see api/.env)

# Auth.js Configuration
AUTH_SECRET="generate-a-random-secret-key-here"
# Generate with: openssl rand -base64 32

# OAuth Providers
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Get these from Facebook Developers: https://developers.facebook.com/
FACEBOOK_CLIENT_ID="your-facebook-app-id"
FACEBOOK_CLIENT_SECRET="your-facebook-app-secret"

# Cloudflare Images (for image upload/storage)
# Get these from Cloudflare Dashboard > Images
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
CLOUDFLARE_IMAGES_TOKEN="your-cloudflare-images-api-token"
CLOUDFLARE_IMAGES_HASH="your-cloudflare-images-hash"

# Cloudflare R2 (for videos, documents, and private files)
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
CLOUDFLARE_R2_ACCESS_KEY_ID="your-r2-access-key-id"
CLOUDFLARE_R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
CLOUDFLARE_R2_BUCKET_NAME="rihigo-media"
CLOUDFLARE_R2_PUBLIC_BUCKET="rihigo-public"
CLOUDFLARE_R2_ENDPOINT="https://your-account-id.r2.cloudflarestorage.com"
# R2 Public URL - Enable public access on your R2 bucket and use the provided URL
# Format: https://pub-{hash}.r2.dev or your custom domain
CLOUDFLARE_R2_PUBLIC_URL="https://pub-yourhash.r2.dev"

# Application Settings
NODE_ENV="development"  # or "production"
PORT="3000"

# API Configuration
API_URL="http://localhost:8080"  # Go API URL (change for production)

# Optional: Additional configuration
# ADMIN_EMAILS="admin@rihigo.com,another@example.com"  # Comma-separated admin emails
# LOG_LEVEL="info"  # debug, info, warn, error
# ENABLE_ANALYTICS="false"
