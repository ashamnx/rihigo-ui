{
  "name": "rihigo",
  "description": "Rihigo project",
  "engines": {
    "node": "^18.17.0 || ^20.3.0 || >=21.0.0"
  },
  "engines-annotation": "Mostly required by sharp which needs a Node-API v9 compatible runtime",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "qwik check-client src dist && vite build -c adapters/cloudflare-pages/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "deploy": "npm run build && wrangler pages deploy",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "fmt": "prettier --write .",
    "fmt.check": "prettier --check .",
    "lint": "eslint \"src/**/*.ts*\"",
    "preview": "qwik build preview && vite preview --open",
    "qwik-speak-extract": "qwik-speak-extract --supportedLangs=en-US,it-IT --assetsPath=i18n",
    "serve": "wrangler pages dev ./dist --compatibility-flags=nodejs_als",
    "start": "vite --open --mode ssr",
    "test.e2e": "playwright test",
    "test.e2e:debug": "playwright test --debug",
    "test.e2e:headed": "playwright test --headed",
    "test.e2e:report": "playwright show-report",
    "test.e2e:ui": "playwright test --ui",
    "test.unit": "vitest components",
    "test.unit.ui": "vitest --ui components",
    "qwik": "qwik",
    "cf-typegen": "wrangler types"
  },
  "devDependencies": {
    "@auth/qwik": "0.9.1",
    "@builder.io/qwik": "^1.17.2",
    "@builder.io/qwik-city": "^1.17.2",
    "@cloudflare/workers-types": "^4.20251128.0",
    "@modular-forms/qwik": "^0.29.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/vite": "^4.1.17",
    "@types/eslint": "8.56.10",
    "@types/node": "20.19.0",
    "@typescript-eslint/eslint-plugin": "7.16.1",
    "@typescript-eslint/parser": "7.16.1",
    "@vitest/ui": "^4.0.10",
    "daisyui": "^5.5.5",
    "eslint": "8.57.0",
    "eslint-plugin-qwik": "^1.17.2",
    "playwright": "^1.56.1",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "qwik-speak": "^0.23.2",
    "tailwindcss": "^4.1.17",
    "typescript": "5.4.5",
    "undici": "7.16.0",
    "vite": "7.2.4",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^4.0.10",
    "wrangler": "^3.0.0"
  },
  "nx": {},
  "dependencies": {},
  "overrides": {
    "picomatch": "^4.0.3"
  }
}
